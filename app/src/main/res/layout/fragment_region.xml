<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegionFragment">

    <ImageView
        android:id="@+id/LogoHelpme"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:src="@drawable/logo_black"
        app:layout_constraintBottom_toTopOf="@id/tvEligePais"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1" />

    <TextView
        android:id="@+id/tvEligePais"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="Elige Pais"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/LogoHelpme"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <EditText
        android:id="@+id/etPais"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:width="300dp"
        android:background="@drawable/editborder"
        android:padding="12dp"
        android:drawableEnd="@drawable/baseline_search_24"
        app:layout_constraintTop_toBottomOf="@id/tvEligePais"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvEligeCiudad"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="Elige tu Ciudad"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/etPais"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <EditText
        android:id="@+id/etCiudad"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/baseline_search_24"
        android:background="@drawable/editborder"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvEligeCiudad"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:background="@drawable/editborder"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/etCiudad"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <TextView
        android:id="@+id/tvPoliticas"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="@string/PoliticasRegistro"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/etEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btnSiguiente"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="@string/siguiente"
        android:backgroundTint="@color/black"
        android:textColor="@color/white"
        android:layout_marginTop="24dp"
        android:padding="15dp"
        app:layout_constraintTop_toBottomOf="@id/tvPoliticas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>